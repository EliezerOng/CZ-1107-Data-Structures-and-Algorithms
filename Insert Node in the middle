#include <stdio.h>
#include <stdlib.h>

struct node
{
    int data;
    struct node *link;
};

void add_at_position(struct node *head , int data ,int pos)
{
    struct node *ptr = head;
    struct node *ptr2 = malloc(sizeof(struct node)); //creating two nodes
    ptr2-> data = data; //one node to hold the data
    ptr2->link = NULL;

    pos--;
    while(pos != 1)
    {
        ptr = ptr->link; //traverse to the node before position
        pos--;
    }
    ptr2->link = ptr->link; //new node link is the address of the node after
    ptr->link = ptr2;
}

int main()
{
    struct node *head = malloc(sizeof(struct node));
    head->data = 10;
    head->link = NULL;

    struct node *current = malloc(sizeof(struct node));
    current->data = 20;
    current->link = NULL;
    head->link = current;

    current = malloc(sizeof(struct node));
    current->data = 30;
    current->link = NULL;
    head->link->link = current;

    int data = 45;
    int position = 3;
    add_at_position(head , data , position);
    struct node *ptr = head;
    while(ptr != NULL)
    {
        printf("%d " , ptr->data);
        ptr = ptr->link;
    }
    return 0;
}
