#include <stdio.h>
#include <stdlib.h>

struct node{
    int data;
    struct node *link;
};

struct node *add_beg(struct node *head , int d)
{
    struct node *ptr = malloc(sizeof(struct node));
    ptr->data = d;
    ptr->link = NULL; //creating a new node for the additional data

    ptr->link = head; //the address of the new node is now the head
    head = ptr; 
    return head; //returns the new address of the head
};

int main()
{
    struct node *head = malloc(sizeof(struct node));
    head->data = 45;
    head->link = NULL;

    struct node *current = malloc(sizeof(struct node));
    current->data = 75;
    current->link = NULL;
    head->link = current;

    current = malloc(sizeof(struct node));
    current->data = 95;
    current->link = NULL;
    head->link->link = current;

    int data = 3;
    head = add_beg(head , data);
    current = head;
    while(current != NULL)
    {
        printf("%d " , current->data);
        current = current->link;
    }
    return 0;
}
 
